@model ExpensesApp.Models.ViewModels.CreateTransactionVM
@{
    ViewData["Title"] = "Edit Transaction";
}

<form method="post" asp-action="Update">
    @*if the filename is the same as the action asp-action="Update" is optional*@
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Transaction</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Date"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Amount"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="TransactionCategoryId"></label>
                        <a asp-action="Create" asp-controller="Category"><i class="fa fa-plus" aria-hidden="true"></i></a>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <select asp-for="TransactionCategoryId" asp-items="@Model.CategoryDropDown" class="form-control">
                            <option selected>--Select Expense Type--</option>
                        </select>
                        <span asp-validation-for="TransactionCategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}