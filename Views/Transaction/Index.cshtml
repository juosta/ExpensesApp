@model IEnumerable<ExpensesApp.Models.ViewModels.TransactionVM>
@{
    ViewData["Title"] = "Transactions";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Transactions</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Transaction" asp-action="Create" asp-route-Type="@ExpensesApp.Models.Enums.TransactionType.Expense" class="btn btn-primary">Add New Expense</a>
            <a asp-controller="Transaction" asp-action="Create" asp-route-Type="@ExpensesApp.Models.Enums.TransactionType.Income" class="btn btn-primary">Add New Income</a>
        </div>
    </div>
    <br />

    <div>
        <button id="tab-btn-1" class="btn btn-primary tab-btn">Expenses</button>
        <button id="tab-btn-2" class="btn btn-primary tab-btn">Income</button>
    </div>
    <div id="tab-1" class="tab show">
        @if (Model.Where(x => x.Type == ExpensesApp.Models.Enums.TransactionType.Expense).Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Expense
                        </th>
                        <th>
                            Amount
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Changes
                        </th>
                    </tr>

                </thead>
                <tbody>

                    @foreach (var transaction in Model.Where(x => x.Type == ExpensesApp.Models.Enums.TransactionType.Expense))
                    {
                        <tr>
                            <td width="25%">@transaction.Title</td>
                            <td width="25%">@transaction.Amount</td>
                            <td width="25%">@transaction.CategoryName</td>
                            <td width="25%">
                                <div class="w-100 btn-group">
                                    <a asp-controller="Transaction" asp-action="Update" asp-route-Id="@transaction.Id" class="btn btn-primary mx-1">Update</a>
                                    <a asp-controller="Transaction" asp-action="Delete" asp-route-Id="@transaction.Id" class="btn btn-danger mx-1">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        }
        else
        {
            <p>No items created yet</p>
        }
    </div>
    <div id="tab-2" class="tab">
        @if (Model.Where(x => x.Type == ExpensesApp.Models.Enums.TransactionType.Income).Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Income
                        </th>
                        <th>
                            Amount
                        </th>
                        <th>
                            Category
                        </th>
                        <th>
                            Changes
                        </th>
                    </tr>

                </thead>
                <tbody>

                    @foreach (var transaction in Model.Where(x => x.Type == ExpensesApp.Models.Enums.TransactionType.Income))
                    {
                        <tr>
                            <td width="25%">@transaction.Title</td>
                            <td width="25%">@transaction.Amount</td>
                            <td width="25%">@transaction.CategoryName</td>
                            <td width="25%">
                                <div class="w-100 btn-group">
                                    <a asp-controller="Transaction" asp-action="Update" asp-route-Id="@transaction.Id" class="btn btn-primary mx-1">Update</a>
                                    <a asp-controller="Transaction" asp-action="Delete" asp-route-Id="@transaction.Id" class="btn btn-danger mx-1">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        }
        else
        {
            <p>No items created yet</p>
        }
    </div>
</div>