@model IEnumerable<ExpensesApp.Models.ViewModels.CategoryVM>

@{
    ViewData["Title"] = "Categories";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Categories list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Add New Category</a>
        </div>
    </div>
    <br />


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Type
                    </th>
                </tr>

            </thead>
            <tbody>

                @foreach (var transaction in Model)
                {
                    <tr>
                        <td width="30%">@transaction.CategoryName</td>
                        <td width="30%">@transaction.Type</td>
                        <td width="40%">
                            <div class="w-100 btn-group">
                                <a asp-controller="Category" asp-action="Update" asp-route-Id="@transaction.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@transaction.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    }
    else
    {
        <p>No items created yet</p>
    }

</div>